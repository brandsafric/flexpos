extends layout.pug
block content
  div
    h2 New Invoice
  hr
  div(class="row")
    div(class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3")
      div(class="panel panel-default")
        div(class="panel-heading")
          h4(class="panel-title") Shopping Cart
        div(class="panel-body" style="padding:0;")
          ul(class="list-group" id="existing" style="margin:0;")
        div(class="panel-footer text-right")
          p
            b Total: 
            | $
            span(id="total")
          p
            b Cash Collected: 
            | $
            input(id="cash" placeholder="0.00" style="width:50px;" autofocus="autofocus")
          p
            b Change Due: 
            | $
            span(id="change") 0.00
  div(class="row")
    div(class="col-sm-12 text-center")
      div(class="form-group")
        a(id="cancel" class="btn btn-default" href="./index.pug") Cancel
        button(id="finalize" class="btn btn-primary") Print
  hr
  div(class="row")
    div(class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3")
      div(class="panel panel-default")
        div(class="panel-heading")
          h4(class="panel-title") Add Product
        div(class="panel-body" style="padding:0;")
          ul(class="list-group" id="new" style="margin:0;")
  script
    include ../js/invoice.js
